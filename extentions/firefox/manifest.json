{
    "manifest_version": 2,
    "name": "Anti-Procrastination",
    "version": "1.0",
    "description": "Blocks specific websites and redirects to a custom page",
    "icons": {
        "48": "icons/blocked-48.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "blocked.html"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/blocked-48.png"
        }
    }
}